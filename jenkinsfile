pipeline {
    agent any

    environment {
        GITHUB_REPO = 'https://github.com/citrasn/citrasn'
        BUILD_TIME = "${new Date().format('yyyy-MM-dd HH:mm:ss')}"
    }

    stages {
        stage('Checkout Code') {
            steps {
                echo 'ğŸš€ Checking out code from GitHub...'
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: '*/main']],
                    userRemoteConfigs: [[
                        url: "${GITHUB_REPO}"
                    ]]
                ])
            }
        }

        stage('List Files') {
            steps {
                echo 'ğŸ“ Listing files:'
                bat 'dir /B'
            }
        }

        stage('Run PHP Script') {
            steps {
                echo 'ğŸ˜ Running PHP script...'
                bat 'php index.php'
            }
        }

        stage('Build Info') {
            steps {
                echo "â± Build time: ${BUILD_TIME}"
            }
        }
    }

    post {
        always {
            echo 'ğŸ Pipeline completed!'
        }
        success {
            echo 'âœ… BUILD SUCCESS!'
        }
        failure {
            echo 'âŒ BUILD FAILED!'
        }
    }
}
